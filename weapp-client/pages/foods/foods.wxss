/**foods.wxss**/
.motto {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 18px;
  line-height: 50px;
  color: #999;
}

.card {
  background-color: #FFF;
  width: 630rpx;
  margin-bottom: 30rpx;
  border-radius: 3px;
  box-shadow: 0px 2px 3px rgba(60,60,60,0.05);
  padding: 30rpx 30rpx 30rpx 30rpx;
  position: flex;
  flex-direction: column;
  z-index: 1;
}

.hover-card {
  background-color: #EEEEEE;
}

.head-title {
  font-size: 18px;
  font-weight: bold;
  color: #3E3E3E;
}

.sub-title {
  margin-left: 10px;
  font-size: 12px;
  color: #808080;
}

.information {
  display: flex;
  flex-direction: row;
}

.left-two-info {
  width: 340rpx;
}

/*style for food-card*/

.description {
  max-height: 100rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.evaluation {
  color: #808080;
  font-size: 12px;
}

.footer {
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  z-index: 2;
}

.FM-button {
  width: 530rpx;
  margin-right: 30rpx;
  background-color: #FF7070;
  box-shadow: 0px 4px 8px rgba(63,63,63,0.3);
  text-align: center;
  padding: 12rpx 0 12rpx;
}

.search-button {
  width: 130rpx;
  background-color: #FFBD73;
  box-shadow: 0px 4px 8px rgba(63,63,63,0.3);
  text-align: center;
  padding: 12rpx 0 12rpx;
}

.FM-button-hover {
  background-color: #BD5050;
}

.search-button-hover {
  background-color: #E1A96B;
}

.footer-text {
  font-size: 34rpx;
  color: #fff;
}

.container {
  padding-bottom: 150rpx;
}

page {
  background-color: #E4E4E4;
}