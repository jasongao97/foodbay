/**index.wxss**/
.card {
  background-color: #FFF;
  width: 610rpx;
  margin-bottom: 30rpx;
  border-radius: 3px;
  box-shadow: 0px 2px 4px rgba(20,20,20,0.3);
  padding: 40rpx 50rpx 30rpx 30rpx;
  position: flex;
  flex-direction: column;
}

.hover-card {
  background-color: #EEEEEE;
}

.d-card {
  background-color: #ddd;
  color: #666;
}

.block {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.loading-block {
  margin-left: 24rpx;
}

.single-block {
  width: 18rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

.head-title {
  font-size: 18px;
  font-weight: bold;
  color: #3E3E3E;
}

.description {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.place-name {
  color: #808080;
  font-size: 14px;
  margin-right: 24rpx;
}

.footer-button {
  width: 690rpx;
  background-color: #656565;
  text-align: center;
  padding: 8rpx 0 12rpx;
}

.footer-button-hover {
  background-color: #404040;
}

.footer-text {
  font-size: 14px;
  color: #ccc;
}

page {
  background-color: #4C4C4C;
}