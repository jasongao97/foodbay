/* pages/search/search.wxss */
.header {
  background-color: #222;
  padding: 20rpx 30rpx 30rpx 30rpx;
}

/*style for food-card*/

.card {
  background-color: #FFF;
  width: 690rpx;
  margin-bottom: 30rpx;
  border-radius: 3px;
  box-shadow: 0px 2px 3px rgba(60,60,60,0.05);
  position: flex;
  flex-direction: column;
  z-index: 1;
}

.hover-card {
  background-color: #EEEEEE;
}

.card-block {
  margin: 32rpx 50rpx 28rpx 32rpx;
}

.head-title {
  font-size: 18px;
  font-weight: bold;
  color: #3E3E3E;
}

.sub-title {
  margin-left: 10px;
  font-size: 12px;
  color: #808080;
}

.information {
  display: flex;
  flex-direction: row;
}

.left-two-info {
  width: 340rpx;
}

.description {
  max-height: 100rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.evaluation {
  color: #808080;
  font-size: 12px;
}

/*style for food-card*/

.block {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.searchspace {
  background-color: #FFF;
  height: 70rpx;
  width: 600rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-input {
  font-size: 14px;
  color: #3E3E3E;
  width: 520rpx;
}

.cancel-button {
  color: #FFF;
  font-size: 14px;
}

.title-bar {
  background-color: #F4F4F4;
  padding: 30rpx 30rpx 30rpx 30rpx;
  font-size: 14px;
}

.tag-bar {
  padding: 30rpx 30rpx 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.tag {
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  padding: 14rpx 32rpx 14rpx 32rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 1px 2px rgba(60,60,60,0.1);
  color: #3E3E3E;
  font-size: 12px;
}

page {
  background-color: #E4E4E4;
}